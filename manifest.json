{
  "name": "QRhome",
  "description" : "Bakes a QR code of the current page without requiring a lot. Not even an internet connection",
  "manifest_version": 2,
  "version" : "1",
  "permissions" : ["tabs"],

  "icons": { "16": "images/icon16.png",
           "48": "images/icon48.png",
          "128": "images/icon128.png" },

  "background": {
    "persistent" : false,
    "scripts" : [ "background.js" ]
  },

  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Make a QR code",
    "default_popup": "popup.html"
  }
}