{
  "name": "QRhome",
  "description" : "Bakes a QR code of the current page without requiring a lot. Not even an internet connection",
  "manifest_version": 2,
  "version" : "1",
  "permissions" : ["tabs"],

  "icons": { "16": "images/icon16.png",
           "48": "images/icon48.png",
          "128": "images/icon128.png" },

  // why chrome? ;__;
  "background": {
    "persistent" : false,
    "scripts" : [ "background.js" ]
  },
  // why can't you just let me access tabs from the popup?

  "browser_action": {
    "default_icon": {                    // optional
      "19": "images/icon19.png",           // optional
      "38": "images/icon38.png"            // optional
    },
    "default_title": "Make a QR code",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
  }
}